<?xml version="1.0" encoding="utf-8" ?> 
<!-- This is a working example of a Major Havoc Profile -->
<GameProfile xmlns="http://askey.org/GameProfile"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://askey.org/GameProfile GameProfile.xsd"
             Version="1.0.0.0">
    <GameInfo>
        <Name>Major Havoc</Name>
        <Version>1.0</Version>
        <Manufacturer>Atari Inc.</Manufacturer>
        <ReleaseDate>1984-01</ReleaseDate>
        <Comment>Production ROMs</Comment>
    </GameInfo>
    <MemoryMap Id="AlphaProcessor"
               AddressWidth="16"
               AddressBase="0x0000"
               BusWidth="8">
        <ROM Id="PagedProgramRom"
             Address="0x2000"
             Size="0x2000">
            <Memory>
                <Bank Id="Bank_1Q">
                    <EPROM Id="EPROM_1Q"
                            Name="136025.215"
                            Size="16384"
                            Width="8"/>
                </Bank>
                <Bank Id="Bank_1NP">
                    <EPROM Id="EPROM_1NP"
                            Name="136025.216"
                            Size="16384"
                            Width="8"/>
                </Bank>
            </Memory>
            <Pages>
                <Page Id="PagedProgramRom.Page_0">
                    <BankRef Id="Bank_1Q" />
                </Page>
                <Page Id="PagedProgramRom.Page_1">
                    <BankRef Id="Bank_1Q" />
                </Page>
                <Page Id="PagedProgramRom.Page_2">
                    <BankRef Id="Bank_1NP" />
                </Page>
                <Page Id="PagedProgramRom.Page_3">
                    <BankRef Id="Bank_1NP" />
                </Page>
            </Pages>
        </ROM>
        <ROM Id="ProgramRom"
             Address="0x8000"
             Size="0x8000">
            <Memory>
                <Bank Id="Bank_1MN">
                    <EPROM Id="EPROM_1MN"
                            Name="136025.217"
                            Size="16384"
                            Width="8"/>
                </Bank>
                <Bank Id="Bank_1L">
                    <EPROM Id="EPROM_1L"
                            Name="136025.318"
                            Size="16384"
                            Width="8"/>
                </Bank>
            </Memory>
            <Pages>
                <Page Id="ProgramRom.Page_0">
                    <BankRef Id="Bank_1MN" />
                    <BankRef Id="Bank_1L" />
                </Page>
            </Pages>
        </ROM>
    </MemoryMap>
    <ProgramMemory>
        <TextSegment>
            <Data Id="AlphaProcessor.ProgramRom.Page_0"
                  Reserved="no"
                  Start="0x2000"
                  Length="0x0234"/>
            <Checksum Id="Checksum1L"
                      Type="Crc32">
                <EPROMRef Id="EPROM_1L"
                          Start="0x0000"
                          End="0xFFFF"/>
                <StorageDefinition Id="Checksum_1L">
                    <Array Type="short">
                        <PageRef Id="PagedProgramRom.Page_0">
                            0x1111
                        </PageRef>
                    </Array>
                </StorageDefinition>
            </Checksum>
        </TextSegment>
    </ProgramMemory>
    <!-- Individual Maze Features,
    The Maximum value represents total # allowed for all mazes combined. -->
    <Features>
        <Feature Id="MazeHint"
                 Maximum="12">
            <!--Not every level has a hint. -->
            <StorageDefinition>
                <Array Id="HintIndex"
                       Type="byte"
                       Storage="value"
                       Size="12">
                    <PageRef Id="ProgramRom.Page_0">
                        0x93FE
                    </PageRef>
                </Array>
                <Array Id="PointerToHintString"
                       Type="string"
                       Storage="pointer"
                       Size="12">
                    <PageRef Id="ProgramRom.Page_0">
                        0xE48b
                    </PageRef>
                </Array>
            </StorageDefinition>
        </Feature>
        <Feature Id="ReactoidTime"
                 Maximum="16">
            <!-- Every level MUST have a Reactoid timer value. -->
            <StorageDefinition >
                <Array Id="ReactoidMeltdownTimes"
                       Type="byte"
                       Storage="value"
                       Size="16">
                    <PageRef Id="PagedProgramRom.Page_1">
                        0x3355
                    </PageRef>
                </Array>
            </StorageDefinition>
        </Feature>
        <Feature Id="Reactoid"
                 Maximum="16">
            <!-- Every level MUST have a Reactoid. It's actually stored as
            the first maze object in the MazeEnemiesObjectList List.-->
            <StorageDefinition Id="MazeEnemiesList">
                <Array Id="MazeEnemiesList"
                       Type="object"
                       Storage="pointer"
                       Size="16">
                    <PageRef Id="PagedProgramRom.Page_0">
                        0x2581
                    </PageRef>
                </Array>
            </StorageDefinition>
        </Feature> 
        <Feature Id="Pyroid">
            <!-- Only one Reactoid ever, so no delimiter before the Pyroids. -->
            <StorageDefinitionRef Id="MazeEnemiesList"
                                  Order="1"/>
        </Feature>
        <Feature Id="Perkoid">
            <!-- May be many Pyroids in list already so use delimiter before
            inserting the Perkoids. -->
            <StorageDefinitionRef Id="MazeEnemiesList"
                                  Order="2">
                <Delimiter>
                    FE
                </Delimiter>
            </StorageDefinitionRef>
        </Feature>      
        <Feature Id="Oxoid">
            <StorageDefinition >
                <Array Id="OxoidList"
                       Type="object"
                       Storage="pointer"
                       Size="16">
                    <PageRef Id="PagedProgramRom.Page_1">
                        0x25A9
                    </PageRef>
                </Array>
            </StorageDefinition>
        </Feature>
        <Feature Id="Lightning">
            <StorageDefinition >
                <Array Id="LightningList"
                       Type="object"
                       Storage="pointer"
                       Size="16">
                    <PageRef Id="PagedProgramRom.Page_1">
                        0x25D1
                    </PageRef>
                </Array>
            </StorageDefinition>
        </Feature>
        <Feature Id="Arrow">
            <StorageDefinition >
                <Array Id="ArrowList"
                       Type="object"
                       Storage="pointer"
                       Size="16">
                    <PageRef Id="PagedProgramRom.Page_1">
                        0x25F9
                    </PageRef>
                </Array>
            </StorageDefinition>
        </Feature>
        <Feature Id="MazeWall">
            <StorageDefinition >
                <Array Id="MazeWallList"
                       Type="object"
                       Storage="pointer"
                       Size="16">
                    <PageRef Id="PagedProgramRom.Page_1">
                        0x2647
                    </PageRef>
                </Array>
            </StorageDefinition>
        </Feature>
        <Feature Id="OneWaySign">
            <StorageDefinition >
                <Array Id="OneWaySignList"
                       Type="object"
                       Storage="pointer"
                       Size="16">
                    <PageRef Id="PagedProgramRom.Page_1">
                        0x2677
                    </PageRef>
                </Array>
            </StorageDefinition>
        </Feature>
        <Feature Id="LockAndKey">
            <StorageDefinition >
                <Array Id="LockAndKeyList"
                       Type="object"
                       Storage="pointer"
                       Size="16">
                    <PageRef Id="PagedProgramRom.Page_1">
                        0x26D1
                    </PageRef>
                </Array>
            </StorageDefinition>
        </Feature>
        <Feature Id="Stalactite">
            <StorageDefinition >
                <Array Id="StalactiteList"
                       Type="object"
                       Storage="pointer"
                       Size="16">
                    <PageRef Id="PagedProgramRom.Page_1">
                        0x26B3
                    </PageRef>
                </Array>
            </StorageDefinition>
        </Feature>
        <Feature Id="EscapePod"
                 Maximum="4">
            <!-- Only Maze type 1 Supports Escape Pods. -->
            <StorageDefinition >
                <Array Id="EscapePodEnabled"
                       Type="boolean"
                       Storage="value"
                       Size="4">
                    <PageRef Id="PagedProgramRom.Page_1">
                        0x32FF
                    </PageRef>
                </Array>
            </StorageDefinition>
        </Feature>
        <Feature Id="Clock"
                 Maximum="16">
            <StorageDefinition >
                <Array Id="ClockEnabled"
                       Type="boolean"
                       Storage="value"
                       Size="16">
                    <PageRef Id="PagedProgramRom.Page_1">
                        0x3290
                    </PageRef>
                </Array>
            </StorageDefinition>
        </Feature>
        <Feature Id="Boots"
                 Maximum="16">
            <StorageDefinition >
                <Array Id="BootsEnabled"
                       Type="boolean"
                       Storage="value"
                       Size="16">
                    <PageRef Id="PagedProgramRom.Page_1">
                        0x32A0
                    </PageRef>
                </Array>
            </StorageDefinition>
        </Feature>
        <Feature Id="Transporter">
            <!-- Transporters come in pairs. -->
            <StorageDefinition >
                <Array Id="TransporterList"
                       Type="object"
                       Storage="pointer"
                       Size="16">
                    <PageRef Id="PagedProgramRom.Page_1">
                        0x26F9
                    </PageRef>
                </Array>
            </StorageDefinition>
        </Feature>
        <Feature Id="IonCannon">
            <!-- Ion Cannon info stored in stream of data object pointers. Offset to
            first cannon object pointer is contained in the byte array. Stream of pointers
            is Null Terminated. -->
            <StorageDefinition >
                <Array Id="IonCannonStreamOffsets"
                       Type="byte"
                       Storage="value"
                       Size="16">
                    <PageRef Id="PagedProgramRom.Page_1">
                        0x269F
                    </PageRef>
                </Array>
            </StorageDefinition>
            <StorageDefinition >
                <Array Id="IonCannonInformation"
                       Type="object"
                       Storage="pointer"
                       Size="16">
                    <PageRef Id="PagedProgramRom.Page_1">
                        0x30B1
                    </PageRef>
                </Array>
            </StorageDefinition>
        </Feature>
        <Feature Id="TripPad"
                 Maximum="50">
            <!-- Trips use low res maze object position (1 byte). I need to work that out
            with the datatype definitions. -->
            <!-- One Pyroid for each Trip Pad! -->
            <StorageDefinition >
                <Array Id="TripPadList"
                       Type="object"
                       Storage="pointer"
                       Size="16">
                    <PageRef Id="PagedProgramRom.Page_1">
                        0x2627
                    </PageRef>
                </Array>
            </StorageDefinition>
        </Feature>
        <Feature Id="TripPadPyroid"
                 Maximum="50">
            <!-- One Pyroid for each Trip Pad! -->
            <!-- I need to look at this since these pyroids are 3 bytes. Not 6 like the
            normal pyroids.
            A 2 dimensional array, the 1st dimension is x, 2nd is fixed at 7. -->
            <StorageDefinition >
                <Array2d Id="TripPadPyroidList"
                          Type="object"
                          Storage="value"
                          Size="16"
                          Size2="7">
                    <PageRef Id="PagedProgramRom.Page_1">
                        0x2D36
                    </PageRef>
                </Array2d>
            </StorageDefinition>
        </Feature>
        <Feature Id="ReactoidHand"
                 Maximum="16">
            <StorageDefinition >
                <Array Id="ReactoidHands"
                       Type="object"
                       Storage="pointer"
                       Size="16">
                    <PageRef Id="PagedProgramRom.Page_1">
                        0x2721
                    </PageRef>
                </Array>
            </StorageDefinition>
        </Feature>
    </Features>
    <FeatureGroups>
        <!-- Feature Ref's allow setting max and required for each level that
        feature is included in. The Maximum value represents total # allowed that
        maze and Required = "yes" means that there must be a value for that maze. -->
        
        <FeatureGroup Id="CommonMazeElements">
            <!-- While not on every level in the Production ROMs they could be. -->
            <FeatureRef Id="Reactoid"
                        Maximum="1"
                        Required="yes"/>
            <FeatureRef Id="ReactoidTime"
                        Maximum="1"
                        Required="yes"/>
            <FeatureRef Id="Pyroid" />
            <FeatureRef Id="Perkoid" />
            <FeatureRef Id="Oxoid" />
            <FeatureRef Id="Lightning" />
            <FeatureRef Id="Arrow" />
            <FeatureRef Id="MazeWall" />
            <FeatureRef Id="OneWaySign" />
            <FeatureRef Id="LockAndKey" />
            <FeatureRef Id="Clock"
                        Maximum="1"/>
            <FeatureRef Id="Boots"
                        Maximum="1"/>
            <FeatureRef Id="Transporter"
                        Maximum="3"/><!-- Transporters come in pairs -->
            <FeatureRef Id="IonCannon"
                        Maximum="5"/>
        </FeatureGroup>
        <FeatureGroup Id="Level5AndUpMazeFeatures">
            <!--<FeatureGroupRef Id="CommonMazeElements"/>-->
            <FeatureRef Id="TripPad"
                        Maximum="7"/>
            <FeatureRef Id="TripPadPyroid"
                        Maximum="7"/>
        </FeatureGroup>
        <FeatureGroup Id="Level6AndUpMazeFeatures">
            <FeatureGroupRef Id="Level5AndUpMazeFeatures"/>
            <FeatureRef Id="Stalactite" />
        </FeatureGroup>
        <FeatureGroup Id="AdvancedMazeFeatures">
            <!-- Levels 7 and up. -->
            <FeatureGroupRef Id="Level6AndUpMazeFeatures"/>
            <FeatureRef Id="ReactoidHand"
                        Maximum="1"/>
        </FeatureGroup>
    </FeatureGroups>
    <Levels Maximum="16"
            Minimum="16">
        <!-- Levels are ascending based on child order. -->
        <Default>
            <!-- Common to all levels without specifically including
            these features. -->
            <FeatureGroupRef Id="CommonMazeElements"/>
        </Default>
        <Level Name="Level_1">
            <FeatureRef Id="MazeHint"
                        Maximum="1"/>
        </Level>
        <Level Name="Level_2">
            <FeatureRef Id="MazeHint"
                        Maximum="1"/>
            <FeatureRef Id="EscapePod"
                        Maximum="1"/>
        </Level>
        <Level Name="Level_3">
            <FeatureRef Id="MazeHint"
                        Maximum="1"/>
        </Level>
        <Level Name="Level_4">
            <FeatureRef Id="MazeHint"
                        Maximum="1"/>
        </Level>
        <Level Name="Level_5">
            <FeatureRef Id="MazeHint"
                        Maximum="1"/>
            <FeatureGroupRef Id="Level5AndUpMazeFeatures"/>
        </Level>
        <Level Name="Level_6">
            <FeatureRef Id="MazeHint"
                        Maximum="1"/>
            <FeatureRef Id="EscapePod"
                        Maximum="1"/>
            <FeatureGroupRef Id="Level6AndUpMazeFeatures"/>
        </Level>
        <Level Name="Level_7">
            <FeatureRef Id="MazeHint"
                        Maximum="1"/>
            <FeatureGroupRef Id="AdvancedMazeFeatures"/>
        </Level>
        <Level Name="Level_8">
            <FeatureRef Id="MazeHint"
                        Maximum="1"/>
            <FeatureGroupRef Id="AdvancedMazeFeatures"/>
        </Level>
        <Level Name="Level_9">
            <FeatureRef Id="MazeHint"
                        Maximum="1"/>
            <FeatureGroupRef Id="AdvancedMazeFeatures"/>
        </Level>
        <Level Name="Level_10">
            <FeatureRef Id="MazeHint"
                        Maximum="1"/>
            <FeatureRef Id="EscapePod"
                        Maximum="1"/>
            <FeatureGroupRef Id="AdvancedMazeFeatures"/>
        </Level>
        <Level Name="Level_11">
            <FeatureRef Id="MazeHint"
                        Maximum="1"/>
            <FeatureGroupRef Id="AdvancedMazeFeatures"/>
        </Level>
        <Level Name="Level_12">
            <FeatureRef Id="MazeHint"
                        Maximum="1"/>
            <FeatureGroupRef Id="AdvancedMazeFeatures"/>
        </Level>
        <Level Name="Level_13">
            <FeatureGroupRef Id="AdvancedMazeFeatures"/>
        </Level>
        <Level Name="Level_14">
            <FeatureRef Id="EscapePod"
                        Maximum="1"/>
            <FeatureGroupRef Id="AdvancedMazeFeatures"/>
        </Level>
        <Level Name="Level_15">
            <FeatureGroupRef Id="AdvancedMazeFeatures"/>
        </Level>
        <Level Name="Level_16">
            <FeatureGroupRef Id="AdvancedMazeFeatures"/>
        </Level>
    </Levels>
</GameProfile>